<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mission_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image -->
    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/conference_bg" />

<!-- Semi-opaque overlay to make text readable; adjust alpha by changing the first two hex digits -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BB000000" />

    <!-- Content (keeps existing Continue button and Learn more link IDs) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="24dp"
            android:gravity="center_horizontal">

            <!-- Header color bars (keeps look from original) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFD700" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#8B0000" />
            </LinearLayout>

            <!-- Logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/sturge_weber_foundation_logo"
                android:contentDescription="@string/app_name" />

            <!-- Title: Our Mission -->
            <TextView
                android:id="@+id/mission_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/our_mission"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/white"/>

            <!-- Mission paragraph (replaced text) -->
            <TextView
                android:id="@+id/mission_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mission_text"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@android:color/white"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- NOTE: Vision and App Purpose sections removed on purpose -->

            <!-- Continue Button (keep same ID so existing code works) -->
            <Button
                android:id="@+id/continue_button"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_marginTop="24dp"
                android:backgroundTint="#0F8A07"
                android:textColor="@android:color/white" />

            <!-- Learn More link (keep same ID so existing code works) -->
            <TextView
                android:id="@+id/learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn more about the foundation here"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#ADD8E6"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
