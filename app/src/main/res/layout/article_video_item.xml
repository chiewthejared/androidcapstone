<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Title (styled same as video titles) -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Article Title"
        android:textColor="@color/brand_green"
        android:textSize="17sp"
        android:textStyle="bold"
        android:paddingBottom="6dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Short description (optional)"
        android:textColor="#666666"
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <!-- OPEN LINK button: green pill, WHITE text, NOT bold (matches video button shape) -->
    <Button
        android:id="@+id/open_link_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_green_pill"
        android:text="@string/open_link"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

</LinearLayout>
